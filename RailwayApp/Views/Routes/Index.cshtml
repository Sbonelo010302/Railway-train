@model IEnumerable<RailwayApp.Models.Route>

@{
    ViewBag.Title = "Routes";
}

<h2>Routes</h2>

@if (!User.IsInRole("Customer"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
@if (User.IsInRole("Customer"))
{
    <p>
        @Html.ActionLink("Search Trains", "AvailableTrains","Trains") 
    </p>
}

@using (Html.BeginForm("index", "routes", FormMethod.Post))
{
    <div class="row">
        <div class="input-group" style="margin:0px 0 0 16px">
            <label class="col-form-label"> From :  &nbsp; &nbsp;</label>
            <input type="text" class="form-control" placeholder="From" name="from" value="@ViewBag.from">
            <label class="col-form-label"> &nbsp; &nbsp; To :  &nbsp; &nbsp;</label>
            <input type="text" class="form-control" placeholder="To" name="to" value="@ViewBag.to">
            <span class="input-group-btn">
                <button class="btn btn-primary" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.From)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.To)
        </th>
        <th>
            Duration (hh:mm)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sequence)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDateTime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.OrderBy(a => a.From).ThenBy(a => a.To))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.From)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.To)
            </td>
            <td>
                @item.Hours.ToString("00"): @item.Minutes.ToString("00")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sequence)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDateTime)
            </td>
            @if (User.IsInRole("Admin"))
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            }
        </tr>
    }

</table>
