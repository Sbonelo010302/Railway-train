@model IEnumerable<RailwayApp.Models.Reservation>
@using RailwayApp.Controllers

@{
    ViewBag.Title = "Index";
}

@*<div class="alert alert-danger">
        Payment is required within 10 minutes after booking is made, or Reservation will expire!
    </div>*@
<h2>Reservations</h2>
<p>
    @if (User.IsInRole("Customer"))
    {
        @Html.ActionLink("Make a Reservation", "AvailableTrains", "Trains")

    }
    @if (User.IsInRole("Admin"))
    {
        @Html.ActionLink("Download all reservations", "ReservationToPdf", new { id = 0 }, new { target = "_blank" })
    }


</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer.FullName)
        </th>
        <th>
            Tickets bought
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Route.RouteName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Expiry)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Booked)
        </th>
        <th>
            @Html.Display("Action")
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoOfReservations)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Route.RouteName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Expiry)
            </td>
            <td>
                @if (item.Booked == true)
                {
                    <span>Booked -- </span>
                    ReservationsController reservations = new ReservationsController();
                    var resRefNo = reservations.GetRef(item.Id) ?? "";
                    <span>Reference Number: @resRefNo</span>
                }
                else
                {
                    <span>Not Booked</span>
                }
            </td>
            <td>
                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) <span>|</span>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }) <span>|</span>
                    @Html.ActionLink("Download", "ReservationToPdf", new { id = item.Id }, new { target = "_blank" })
                }
                @if (item.Booked != true && User.IsInRole("Customer") && item.Expiry > DateTime.Today)
                {
                    @Html.ActionLink("Details", "Details", new { id = item.Id })<span>|</span>
                }

                @if (User.IsInRole("Customer"))
                {
                    @Html.ActionLink("Download", "ReservationToPdf", new { id = item.Id }, new { target = "_blank" })
                }
            </td>
        </tr>
    }

</table>
